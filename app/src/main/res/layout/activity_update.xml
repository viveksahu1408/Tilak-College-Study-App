<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.UpdateActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/helpHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📢Help / Suggestions"
                android:textSize="27sp"
                android:textColor="#111E4D"
                android:background="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/helpMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="यह ऐप अभी विकास में है और सभी स्टडी मटेरियल (Notes, Syllabus, Question Papers) पूरी तरह से उपलब्ध नहीं हैं।\n\nअगर आपको ऐप में कोई गलती, सुधार या सुझाव दिखे तो कृपया हमें जरूर बताएं।\n\nअगर आपके पास अपने Notes, Syllabus या Question Papers हैं तो हमें भेजकर आप दूसरों की पढ़ाई में मदद कर सकते हैं।\n\nहम आपके सहयोग के लिए आभारी रहेंगे।"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:paddingBottom="24dp" />

            <Button
                android:id="@+id/emailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#111E4D"

                android:text="✉️ Email से संपर्क करें" />

            <Button
                android:id="@+id/whatsappButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#111E4D"

                android:text="📱 WhatsApp से संपर्क करें"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>